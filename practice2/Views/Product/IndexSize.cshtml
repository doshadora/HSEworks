@model IEnumerable<practice2.DAL.product_address>

@{
    ViewBag.Title = "IndexSize";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Размеры</h2>

<p>
    @Html.ActionLink("Создать", "CreateSize")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Артикул")
        </th>
        <th>
            @Html.DisplayName("Количество")
        </th>
        <th>
            @Html.DisplayName("Дата изменения")
        </th>
        <th>
            @Html.DisplayName("Размер")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.product.product_code)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.product_amount)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.change_date)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.dict_size.size_value)
    </td>
</tr>
    }

</table>

<div>
    @Html.ActionLink("Вернуться", "Index")
</div>