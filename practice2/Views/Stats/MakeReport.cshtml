@model IEnumerable<practice2.Models.StatModel>

@{
    ViewBag.Title = "MakeReport";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Отчёт</h2>

<div class="btn btn-default">@Html.ActionLink("Excel", "Reports", new { ReportType = "Excel" })</div>
<div class="btn btn-default">@Html.ActionLink("Word", "Reports", new { ReportType = "Word" })</div>

@if (Model.Count() != 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.category_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.product_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProdAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Summa)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.category_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.product_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProdAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Summa)
                </td>
            </tr>
        }

    </table>
}
else
{
    <h4 align="center">@Html.ActionLink("За выбранный период еще нет завершенных заказов", "Index")</h4>
}

