@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Отчет о количестве проданных товаров за выбранный период</h2>


@using (Html.BeginForm("MakeReport", "Stats", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Первая дата:")
        <div class="col-md-10">
            <input class="form-control" data-val="true" data-val-date="Поле Первая дата должно содержать дату." data-val-required="Требуется поле Первая дата." id="dateOne" name="dateOne" type="date" value="01.01.0001 0:00:00">
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Вторая дата:")
        <div class="col-md-10">
            <input class="form-control" data-val="true" data-val-date="Поле Вторая дата должно содержать дату." data-val-required="Требуется поле Вторая дата." id="dateTwo" name="dateTwo" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")">
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Просмотреть отчет" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Вернуться", "Index")
</div>